@{
    ViewData["Title"] = "Create project";
}

<h1>Create project</h1>
<h2>Select manager</h2>
<form asp-action="InputProjectData">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="CustomerId" value=@ViewBag.CustomerId />
    <input type="hidden" name="PerformerId" value=@ViewBag.PerformerId />

    <div class="form-group">
        <label name="Manager" class="control-label"></label>
        <select name="ManagerId" class="form-control" asp-items="ViewBag.ManagerId"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Next" class="btn btn-primary" />
    </div>
</form>